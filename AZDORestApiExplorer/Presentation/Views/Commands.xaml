<vncmvvm:ViewBase
    x:Class="AZDORestApiExplorer.Presentation.Views.Commands"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:AZDORestApiExplorer.Presentation.Views"
    xmlns:vncmvvm="clr-namespace:VNC.Core.Mvvm;assembly=VNC.CoreNF"

    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
    xmlns:dxdb="http://schemas.devexpress.com/winfx/2008/xaml/demobase"
    xmlns:dxdo="http://schemas.devexpress.com/winfx/2008/xaml/docking"
    xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
    xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
    xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol"

    mc:Ignorable="d"
    d:DesignHeight="450" d:DesignWidth="800"
    Background="White"
>

    <dxlc:LayoutGroup
        View="Group" Orientation="Horizontal" >

        <dxlc:LayoutGroup 
        	View="Group" Orientation="Vertical" >
            
            <dxlc:LayoutGroup Header="Accounts"
                View="GroupBox" Orientation="Vertical"
                VerticalAlignment="Top" HorizontalAlignment="Stretch"
                IsCollapsible="True"  IsCollapsed="False">

                <dxlc:LayoutItem>
                    <Button
                    Command="{Binding GetAccountsCommand }"
                    Content="{Binding GetAccountsContent, FallbackValue='Get Accounts' }"
                    ToolTip="{Binding GetAccountsToolTip, FallbackValue='Get Accounts ToolTip' }" />
                </dxlc:LayoutItem>

            </dxlc:LayoutGroup>

            <dxlc:LayoutGroup Header="Core"
                View="GroupBox" Orientation="Vertical"
                VerticalAlignment="Top" HorizontalAlignment="Stretch"
                IsCollapsible="True"  IsCollapsed="False">

                    <!--<Button Click="GetProcesses_Click">GET process/processes</Button>-->

                    <!--<Button Click="GetProcess_Click">GET process/{processId}</Button>-->

                    <!--<Button Click="GetProjects_Click">GET projects</Button>-->

                    <!--<Button Click="GetProject_Click">GET projects/projectId</Button>
                        <Button Click="GetAllTeams_Click">GET teams</Button>
                        <Button Click="GetTeams_Click">GET projects/{projectId}/teams</Button>
                        <Button Click="GetTeam_Click">GET projects/{projectId}/teams/{teamId}</Button>-->

                <dxlc:LayoutItem>
                    <Button
                    Command="{Binding GetProcessesCommand }"
                    Content="{Binding GetProcessesContent, FallbackValue='Get Processes' }"
                    ToolTip="{Binding GetProcessesToolTip, FallbackValue='Get Processes ToolTip' }" />
                </dxlc:LayoutItem>

                <dxlc:LayoutItem>
                    <Button
                    Command="{Binding GetProjectsCommand }"
                    Content="{Binding GetProjectsContent, FallbackValue='Get Projects' }"
                    ToolTip="{Binding GetProjectsToolTip, FallbackValue='Get Projects ToolTip' }" />
                </dxlc:LayoutItem>

                <dxlc:LayoutItem>
                    <Button
                    Command="{Binding GetTeamsCommand }"
                    Content="{Binding GetTeamsContent, FallbackValue='Get Teams' }"
                    ToolTip="{Binding GetTeamsToolTip, FallbackValue='Get Teams ToolTip' }" />
                </dxlc:LayoutItem>
            </dxlc:LayoutGroup>
            
        </dxlc:LayoutGroup>
        
        <dxlc:LayoutGroup Header="Dashboard"
            View="GroupBox" Orientation="Vertical"
            VerticalAlignment="Top" HorizontalAlignment="Stretch"
            IsCollapsible="True"  IsCollapsed="False">

            <dxlc:LayoutItem>
                <Button
                    Command="{Binding GetDashboardsCommand }"
                    Content="{Binding GetDashboardsContent, FallbackValue='GetDashboards' }"
                    ToolTip="{Binding GetDashboardsToolTip, FallbackValue='GetDashboards ToolTip' }" />
            </dxlc:LayoutItem>

            <dxlc:LayoutItem>
                <Button
                    Command="{Binding GetWidgetsCommand }"
                    Content="{Binding GetWidgetsContent, FallbackValue='GetWidgets' }"
                    ToolTip="{Binding GetWidgetsToolTip, FallbackValue='GetWidgets ToolTip' }" />
            </dxlc:LayoutItem>
        </dxlc:LayoutGroup>
        
        <dxlc:LayoutGroup Header="Work"
                View="GroupBox" Orientation="Vertical"
                VerticalAlignment="Top" HorizontalAlignment="Stretch"
                IsCollapsible="True"  IsCollapsed="False">

            <dxlc:LayoutItem>
                <Button
                    Command="{Binding Get_Work_BacklogsCommand }"
                    Content="{Binding Get_Work_BacklogsContent, FallbackValue='Get Work Backlogs' }"
                    ToolTip="{Binding Get_Work_BacklogsToolTip, FallbackValue='Get Work Backlogs ToolTip' }" />
            </dxlc:LayoutItem>

            <dxlc:LayoutItem>
                <Button
                    Command="{Binding Get_Work_BoardsCommand }"
                    Content="{Binding Get_Work_BoardsContent, FallbackValue='Get Work Boards' }"
                    ToolTip="{Binding Get_Work_BoardsToolTip, FallbackValue='Get Work Boards ToolTip' }" />
            </dxlc:LayoutItem>
            
            <dxlc:LayoutItem>
                <Button
                    Command="{Binding Get_Work_BoardColumnsCommand }"
                    Content="{Binding Get_Work_BoardColumnsContent, FallbackValue='Get Work BoardColumns' }"
                    ToolTip="{Binding Get_Work_BoardColumnsToolTip, FallbackValue='Get Work BoardColumns ToolTip' }" />
            </dxlc:LayoutItem>

            <dxlc:LayoutItem>
                <Button
                    Command="{Binding Get_Work_BoardRowsCommand }"
                    Content="{Binding Get_Work_BoardRowsContent, FallbackValue='Get Work BoardRows' }"
                    ToolTip="{Binding Get_Work_BoardRowsToolTip, FallbackValue='Get Work BoardRows ToolTip' }" />
            </dxlc:LayoutItem>

        </dxlc:LayoutGroup>

        <dxlc:LayoutGroup 
        	View="Group" Orientation="Vertical" >
            
            <dxlc:LayoutGroup Header="Work Item Tracking"
                View="GroupBox" Orientation="Vertical"
                VerticalAlignment="Top" HorizontalAlignment="Stretch"
                IsCollapsible="True"  IsCollapsed="False">
                
            </dxlc:LayoutGroup>

                <dxlc:LayoutGroup Header="Work Item Tracking Process"
                View="GroupBox" Orientation="Vertical"
                VerticalAlignment="Top" HorizontalAlignment="Stretch"
                IsCollapsible="True"  IsCollapsed="False">

                <dxlc:LayoutItem>
                    <Button
                        Command="{Binding GetWorkItemTypesCommand }"
                        Content="{Binding GetWorkItemTypesContent, FallbackValue='GetWorkItemTypes' }"
                        ToolTip="{Binding GetWorkItemTypesToolTip, FallbackValue='GetWorkItemTypes ToolTip' }" />
                </dxlc:LayoutItem>

                <dxlc:LayoutItem>
                    <Button
                        Command="{Binding GetStatesCommand }"
                        Content="{Binding GetStatesContent, FallbackValue='GetStates' }"
                        ToolTip="{Binding GetStatesToolTip, FallbackValue='GetStates ToolTip' }" />
                </dxlc:LayoutItem>

                <dxlc:LayoutItem>
                    <Button
                        Command="{Binding GetFieldsCommand }"
                        Content="{Binding GetFieldsContent, FallbackValue='GetFields' }"
                        ToolTip="{Binding GetFieldsToolTip, FallbackValue='GetFields ToolTip' }" />
                </dxlc:LayoutItem>

                <dxlc:LayoutItem>
                    <Button
                        Command="{Binding GetListsCommand }"
                        Content="{Binding GetListsContent, FallbackValue='GetLists' }"
                        ToolTip="{Binding GetListsToolTip, FallbackValue='GetLists ToolTip' }" />
                </dxlc:LayoutItem>

                <dxlc:LayoutItem>
                    <Button
                        Command="{Binding GetRulesCommand }"
                        Content="{Binding GetRulesContent, FallbackValue='GetRules' }"
                        ToolTip="{Binding GetRulesToolTip, FallbackValue='GetRules ToolTip' }" />
                </dxlc:LayoutItem>
                    
                <dxlc:LayoutItem>
                    <Button
                        Command="{Binding GetSystemControlsCommand }"
                        Content="{Binding GetSystemControlsContent, FallbackValue='GetSystemControls' }"
                        ToolTip="{Binding GetSystemControlsToolTip, FallbackValue='GetSystemControls ToolTip' }" />
                </dxlc:LayoutItem>
            </dxlc:LayoutGroup>

            <dxlc:LayoutGroup Header="Work Item Tracking Process Template"
                View="GroupBox" Orientation="Vertical"
                VerticalAlignment="Top" HorizontalAlignment="Stretch"
                IsCollapsible="True"  IsCollapsed="False">

                <dxlc:LayoutItem>
                    <Button
                        Command="{Binding GetBehaviorsCommand }"
                        Content="{Binding GetBehaviorsContent, FallbackValue='GetBehaviors' }"
                        ToolTip="{Binding GetBehaviorsToolTip, FallbackValue='GetBehaviors ToolTip' }" />
                </dxlc:LayoutItem>
            </dxlc:LayoutGroup>

        </dxlc:LayoutGroup>

    </dxlc:LayoutGroup>
</vncmvvm:ViewBase>