            <StackPanel Grid.Column="1" Orientation="Vertical">
                <Label Content="Work Item Tracking" />
                <WrapPanel Width="200">
                    <dxlc:LayoutItem>
                        <Button 
                    		    Command="{Binding GetWorkItemTypesCommand }"
                    		    Content="{Binding GetWorkItemTypesContent, FallbackValue='GetWorkItemTypes' }"
                    		    ToolTip="{Binding GetWorkItemTypesToolTip, FallbackValue='GetWorkItemTypes ToolTip' }" />
                    </dxlc:LayoutItem>

                    <dxlc:LayoutItem>
                        <Button 
                    		        Command="{Binding GetStatesCommand }"
                    		        Content="{Binding GetStatesContent, FallbackValue='GetStates' }"
                    		        ToolTip="{Binding GetStatesToolTip, FallbackValue='GetStates ToolTip' }" />
                    </dxlc:LayoutItem>

                    <dxlc:LayoutItem>
                        <Button 
                    		        Command="{Binding GetFieldsCommand }"
                    		        Content="{Binding GetFieldsContent, FallbackValue='GetFields' }"
                    		        ToolTip="{Binding GetFieldsToolTip, FallbackValue='GetFields ToolTip' }" />
                    </dxlc:LayoutItem>

                    <dxlc:LayoutItem>
                        <Button 
                    		            Command="{Binding GetListsCommand }"
                    		            Content="{Binding GetListsContent, FallbackValue='GetLists' }"
                    		            ToolTip="{Binding GetListsToolTip, FallbackValue='GetLists ToolTip' }" />
                    </dxlc:LayoutItem>

                </WrapPanel>
            </StackPanel>

