    xmlns:viewModels="clr-namespace:AZDORestApiExplorer.Presentation.ViewModels"
    xmlns:infra="clr-namespace:AZDORestApiExplorer.Core"
    prism:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d"
    d:DesignHeight="450" d:DesignWidth="800"
>
    <StackPanel Grid.Column="0">
        <Label Content="Available Collections" />
        <ComboBox x:Name="CB1OC"
                        ItemsSource="{Binding AvailableCollections}"
                              DisplayMemberPath="Name"
                              SelectedValuePath="Details"
                              SelectedItem="{Binding SelectedCollection, Mode=TwoWay}">
        </ComboBox>
        <StackPanel Orientation="Horizontal" Margin="3">
            <StackPanel Orientation="Horizontal">
                <Label Content="Uri" Width="20"/>
                <TextBox x:Name="TB1OC" Text="{Binding SelectedCollection.Details.Uri }" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="15,0,0,0" >
                <Label Content="PAT" Width="20"/>
                <TextBox x:Name="TB2OC" Text="{Binding SelectedCollection.Details.PAT }" Width="320" ToolTip="Paste in PAT" Background="LightSalmon" />
            </StackPanel>
        </StackPanel>
    </StackPanel>
