<vncmvvm:ViewBase
    x:Class="AZDORestApiExplorer.Presentation.Views.ContextMain"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:prism="http://www.codeplex.com/prism"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
    xmlns:dxdb="http://schemas.devexpress.com/winfx/2008/xaml/demobase"
    xmlns:dxdo="http://schemas.devexpress.com/winfx/2008/xaml/docking"
    xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
    xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
    xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol"
    xmlns:vncmvvm="clr-namespace:VNC.Core.Mvvm;assembly=VNC.CoreNF"
    xmlns:local="clr-namespace:AZDORestApiExplorer.Presentation.Views"
    
    xmlns:views="clr-namespace:AZDORestApiExplorer.Presentation.Views"
    xmlns:viewModels="clr-namespace:AZDORestApiExplorer.Presentation.ViewModels"
    xmlns:infra="clr-namespace:AZDORestApiExplorer.Core"
    prism:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="300"
>
    <UserControl.Resources>
        <!--These are implicit DataTemplates--><!--
        <DataTemplate DataType="{x:Type viewModels:ContextDetailViewModel}">
            <views:ContextDetail />
        </DataTemplate>
        --><!-- <DataTemplate DataType="{x:Type viewModels:MeetingDetailViewModel}"> -->
            <!-- <views:MeetingDetail /> -->
        <!-- </DataTemplate> --><!--
        <DataTemplate DataType="{x:Type viewModels:DetailViewModel}">
            <views:Detail />
        </DataTemplate>-->
    </UserControl.Resources>

    <Grid>
        <dxlc:LayoutGroup Header="WorkItemTracking"
        	View="GroupBox" Orientation="Vertical" 
        	VerticalAlignment="Top" HorizontalAlignment="Stretch"
        	IsCollapsible="True"  IsCollapsed="False">

            <dxlc:LayoutGroup Header="Process"
            	View="GroupBox" Orientation="Vertical" 
            	VerticalAlignment="Top" HorizontalAlignment="Stretch"
            	IsCollapsible="True"  IsCollapsed="False">
                <dxlc:LayoutItem HorizontalAlignment="Left" Label="name:" LabelPosition="Left">
                    <TextBlock Text="{Binding Context.SelectedProcess.name}" />
                </dxlc:LayoutItem>

                <dxlc:LayoutItem HorizontalAlignment="Left" Label="typeid:" LabelPosition="Left">
                    <TextBlock Text="{Binding Context.SelectedProcess.typeId}" />
                </dxlc:LayoutItem>

                <dxlc:LayoutGroup Header="WorkItem"
            	View="GroupBox" Orientation="Vertical" 
            	VerticalAlignment="Top" HorizontalAlignment="Stretch"
            	IsCollapsible="True"  IsCollapsed="False">

                    <dxlc:LayoutItem HorizontalAlignment="Left" Label="referenceName:" LabelPosition="Left">
                        <TextBlock Text="{Binding Context.SelectedWorkItemType.referenceName}" />
                    </dxlc:LayoutItem>

                    <dxlc:LayoutItem HorizontalAlignment="Left" Label="id:" LabelPosition="Left">
                        <TextBlock Text="" />
                    </dxlc:LayoutItem>

                </dxlc:LayoutGroup>
            </dxlc:LayoutGroup>

            <dxlc:LayoutGroup Header="Project"
            	View="GroupBox" Orientation="Vertical" 
            	VerticalAlignment="Top" HorizontalAlignment="Stretch"
            	IsCollapsible="True"  IsCollapsed="False">

                <dxlc:LayoutItem HorizontalAlignment="Left" Label="name:" LabelPosition="Left">
                    <TextBlock Text="{Binding Context.SelectedProject.name}" />
                </dxlc:LayoutItem>

                <dxlc:LayoutItem HorizontalAlignment="Left" Label="id:" LabelPosition="Left">
                    <TextBlock Text="{Binding Context.SelectedProject.id}" />
                </dxlc:LayoutItem>

            </dxlc:LayoutGroup>

            <dxlc:LayoutGroup Header="Team"
            	View="GroupBox" Orientation="Vertical" 
            	VerticalAlignment="Top" HorizontalAlignment="Stretch"
            	IsCollapsible="True"  IsCollapsed="False">

                <dxlc:LayoutItem HorizontalAlignment="Left" Label="name:" LabelPosition="Left">
                    <TextBlock Text="{Binding Context.SelectedTeam.name}" />
                </dxlc:LayoutItem>

                <dxlc:LayoutItem HorizontalAlignment="Left" Label="id:" LabelPosition="Left">
                    <TextBlock Text="{Binding Context.SelectedTeam.id}" />
                </dxlc:LayoutItem>

            </dxlc:LayoutGroup>



        </dxlc:LayoutGroup>
    </Grid>
</vncmvvm:ViewBase>