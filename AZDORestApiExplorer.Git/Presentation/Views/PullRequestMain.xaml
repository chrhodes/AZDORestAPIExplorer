<vncmvvm:ViewBase
    x:Class="AZDORestApiExplorer.Git.Presentation.Views.PullRequestMain"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
    xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
    xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://www.codeplex.com/prism"
    xmlns:vncmvvm="clr-namespace:VNC.Core.Mvvm;assembly=VNC.Core"
    prism:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d"
    d:DesignHeight="450" d:DesignWidth="800"
>
    <d:DesignerProperties.DesignStyle>
        <Style TargetType="UserControl">
            <Setter Property="Background" Value="White" />
        </Style>
    </d:DesignerProperties.DesignStyle>

    <UserControl.Resources>
        
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Border Style="{StaticResource CountBorder}" Grid.Row="0"
                    HorizontalAlignment="Left" VerticalAlignment="Center">
            <StackPanel Style="{StaticResource CountStackPanel}" Margin="2">
                <Label Content="Count:" />
                <TextBlock Text="{Binding PullRequests.Count}"
                                Style="{StaticResource CountTextBlock}" />
            </StackPanel>
        </Border>

        <dxlc:LayoutGroup
        	View="Group" Orientation="Horizontal" Grid.Row="0" HorizontalAlignment="Right">

            <Button
                Command="{Binding ExportGridCommand}"
                CommandParameter="{Binding ElementName=grdResults}"
                Content="{Binding ExportGridContent, FallbackValue='ExportGrid' }"
                ToolTip="{Binding ExportGridToolTip, FallbackValue='ExportGrid ToolTip' }"
                Width="85" VerticalAlignment="Center" />

            <dxlc:LayoutItem  Label="Output Path:" VerticalAlignment="Center">
                <dxe:TextEdit Text="{Binding OutputFileNameAndPath}"  Width="300" />
            </dxlc:LayoutItem>
        </dxlc:LayoutGroup>

        <dxg:GridControl x:Name="grdResults" Grid.Row="1"
                    ItemsSource="{Binding PullRequests.ResultItems}"
                    SelectedItem="{Binding PullRequests.SelectedItem}"
                    FontSize="12"
                    ScrollViewer.CanContentScroll="True"
                    ScrollViewer.HorizontalScrollBarVisibility="Auto"
                    ScrollViewer.VerticalScrollBarVisibility="Auto">
            <dxg:GridColumn FieldName="title" />
            <dxg:GridColumn FieldName="description" />
            <dxg:GridColumn FieldName="pullRequestId" />
            <dxg:GridColumn FieldName="codeReviewId" />
            <dxg:GridColumn FieldName="status" />
            <dxg:GridColumn FieldName="createdBy.uniqueName" />
            <dxg:GridColumn FieldName="creationDate" />
            <!--<dxg:GridColumn FieldName="url" />-->
        </dxg:GridControl>

        <dxe:TextEdit Grid.Row="2"
            Text="{Binding PullRequests.SelectedItem.url}"
            TextWrapping="Wrap"  VerticalScrollBarVisibility="Auto" />

        <TextBlock Text="{Binding Message}" Grid.Row="3" />
    </Grid>
</vncmvvm:ViewBase>